<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="yambaText" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="yambaText.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="yambaText.medium">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="yambaText.label">
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="yambaText.editable">
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
        <item name="android:gravity">top|left</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:background">@color/mist</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
